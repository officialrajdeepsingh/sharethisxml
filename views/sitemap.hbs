<?xml version="1.0" encoding="UTF-8"?>
    <rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
        <channel>
            <title>{{ data.about.sitename }}</title>
            <description>{{ data.about.description }}</description>
            <link>{{ data.about.baseUrl }}</link>

            <atom:link href="{{ data.about.baseUrl }}/feed.xml" rel="self" type="application/rss+xml" />

            {{#each data.articles}}

                <item>

                    <title>{{this.title}}</title>
                    <description> {{this.description}}</description>
                    <link>{{this.link}}</link>
                    <image>{{this.image}}</image>
                    <guid isPermaLink="false">{{this.guid}}</guid>
                    <categories>{{this.categories}}</categories>
                    <author>{{this.author}}</author>
                    <date>{{this.date}}</date>

                </item>

            {{/each}}
            
    </channel>
</rss>



